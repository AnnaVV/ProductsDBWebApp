@model MyMvcApplicationTest.Models.Producer

@{
    ViewBag.Title = "AddProducer";
}

<h2>Add New Producer</h2>

<form role="form" method="POST">
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter producer name here" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LocationId)
        @Html.TextBoxFor(m => m.LocationId, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
<br />
@Html.ActionLink("Main page", "Index")
